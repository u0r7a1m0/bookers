<main>
  <div class="new-post">
    <h2>New book</h2>
    <%= form_with model: @book,url:'/books',method::post do |f| %>
      <p>Title</p>
      <%=f.text_field:title %>
  
      <p>Body</p>
      <%=f.text_area:body %>
      
      <p><%=f.submit 'Create Book',class:"new-post-botton" %></p>
    <% end %>
  </div>
</main>