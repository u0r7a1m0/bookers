<main>
  <div class="main-top">
    <h1 class="index-title">Books</h1>
<!--一覧画面-->
    <div class="books-wrap">

      <table>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
        <% @books.each do |book|%>
        <tr>
          <td class="table-book-title"><%=book.title%></td>
          <td class="table-book-body"><%=book.body%></td>
          
          <td class="table-botton"><%= link_to 'show',book_path(book.id) %></td>
          <td class="table-botton"><%= link_to 'edit',edit_book_path(book.id) %></td>
          <td class="table-botton"><%= link_to "destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <%end%>
      </table>
    </div>
  </div>
  

<!--投稿画面-->
  <div class="main-bottom">
  <div class="new-post">
    <h2>New book</h2>
    <%= form_with model:@book do |f| %>
      <p>Title</p>
      <%=f.text_field:title %>
  
      <p>Body</p>
      <%=f.text_area:body %>
      
      <p><%=f.submit 'Create Book',class:"new-post-botton" %></p>
    <% end %>
  </div>
  </div>


</main>


